/* pages/tops/tops.wxss */
page{
  height:100%;
}
.top-box{
  height:100%;
  background-color: #f5f5f5; 
  overflow: hidden;
  width: 100%;
  position: relative;
}
.options{
  width: 100%;
  padding: 10rpx;
  background: #fff;
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  min-height: 188rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 66;
}
.fol-scr-box{
  height:100%;
  padding-top: 188rpx;
  box-sizing: border-box;
}
.option{
  width: 33.3%;
  display: block;
}
.option > text{
  display: block;
  margin: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.option > .option-visible{
  color: #1571e5;
  border-color:#1571e5;
}
.fol-title-box{
  height: 80rpx;
  background: #fff;
  display: flex;
  overflow: hidden;
}
.fol-title-box > .fol-t-name{
  flex: 1;
  padding-left: 30rpx;
  font-size: 32rpx;
  color: #222;
  line-height: 100rpx;
  position: relative;
}
.fol-t-name::before{
  content: '';
  display: inline-block;
  width: 4rpx;
  height: 34rpx;
  background: #1571e5;
  position: absolute;
  left: 0;
  top: 32rpx;
}
.fol-title-box > .fol-t-more{
  width: 140rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #999;
}
.fol-t-more::after{
  content: '\e620';
  font-family: 'wxfont';
}
/* 列表开始 */
.item-box{
  background-color: #fff;
  display: block;
  padding:24rpx 20rpx 0;
}
.fol-fot-line{
  clear: both;
  height: 16rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.item-box-head{
  height: 150rpx;
  width: 100%;
  display: block;
  padding-bottom: 20rpx;
}
.img{
  width: 224rpx;
  height: 150rpx;
  float: left;
  position: relative;
}
.img:after{
  position: absolute;
  top: 0;
  left: 0;
  width:224rpx;
  height:150rpx;
  line-height: 150rpx;
  font-size: 50rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: 1;
  font-family: "detail";
  content: "\5361";
  text-align: center;
}
.logoNg::after{
  display: none;
}
.img > image{
  width: 224rpx;
  height: 150rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.inx{font-size: 24rpx; color: #fff;
  position: absolute;
  top: 0; left: 0;
  width: 60rpx; height: 60rpx;
  z-index: 4;
  line-height: 45rpx;
  text-indent: 7rpx;
}
.inx:before{content:''; height:0; width:0; display:block; border:60rpx transparent solid; border-bottom-width:0; border-left-width:0; border-top-color:#f33; position:absolute; top:0px; left:0px;z-index: -1;}
.gre:before{border-top-color: #00c708;}
.tag:before{border-top-color: #999;}
.msg{
  float: right;
  width: 450rpx;
}
.msg > text{
  display: block;
}
.txt{height: 50rpx; font-size: 30rpx;}
.pay{height: 34rpx; font-size: 25rpx; color: #f60; flex: 1;}
.fol-s-txt{
  height: 34rpx; font-size: 25rpx;
  color: #999;
}
.fol-s-line{
  height: 8rpx;
  width: 170rpx;
  margin-top: 16rpx;
  background-color: #eee;
  border-radius: 10rpx;
  overflow: hidden;
}
.fol-s-line view{
  background: #f60;
  height: 100%;
}
.fol-s-xun{ display: flex; margin-top: 16rpx;}
.fol-pay-btn{
  width: 100rpx; font-size: 25rpx; color: #f60;
  text-align: right;
}
.fol-pay-btn::after{
  content: '\e620';
  font-family: 'wxfont';
}
.fol-t-box{display: flex;}
.fol-t-box .txt{flex: 1;}
.fol-t-box .typ{
  width: 100rpx;
  text-align: right;
  font-size: 20rpx;
  color: #3389ff;
  line-height: 20rpx;
}
.fol-t-box .typ::before{
  content: '\e608';
  display: inline-block;
  position: relative;
  top: 8rpx;
  font-family: 'wxfont';
  font-size: 26rpx;
}
.fol-t-box .to-up{color: #f33;}
.fol-t-box .to-up::before{
  content: '\e841';
  font-size: 40rpx;
}
.fol-t-box .to-down{color: #17bb2b;}
.fol-t-box .to-down::before{
  content: '\e840';
  font-size: 40rpx;
}
.fol-lists-box{
  margin-top: 30rpx;
  background: #fff;
  padding: 0 20rpx;
  height: 70rpx;
  display: flex;
}
.fol-lists-box view{
  flex: 1;
  text-align: center;
  color: #999;
  line-height: 70rpx;
  font-size: 24rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.fol-lists-box .active{
  color: #1571e5;
  border-bottom: 4rpx solid #1571e5;
}
.msg .fol-tit-txt{
  font-size: 30rpx;
  height: 88rpx;
  line-height: 44rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.fol-s-car{width: 224rpx;}
.fol-s-hot{flex: 1; padding-left: 36rpx;}




.back-top{
  position: fixed;
  bottom: 120rpx;
  right: -140rpx;
  width: 140rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 36rpx 0 0 36rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  background-color: rgba(88,108,148,.8);
  -webkit-transition: all .3s ease-out;
  transition: all .3s ease-out;
  z-index: 9;
}

