/* pages/tops/tops.wxss */
page{
  height:100%;
}
.top-box{
  height:100%;
  background-color: #f5f5f5; 
  overflow: hidden;
  position: relative;
}
.fol-list{
  height: 100%;
  padding-top: 94rpx;
  box-sizing: border-box;
}

.recommend{background: #fff; padding-right: 88rpx; padding-bottom: 14rpx;
  position: absolute; top: 0; left: 0; height: 94rpx; overflow: hidden;
  z-index: 66;
  width: 100%;
  box-sizing: border-box;
}
.recommend::after{content: ''; display: block; clear: both;width: 100%;height: 2rpx;}
.rec-down{ height: auto;}
.after-dow{
  display: block; width: 88rpx;
  height: 88rpx;
  position: absolute; top: 0; right: 0; z-index: 3;
}
.after-dow::before{
  content: '\e63c';
  font-family: "wxfont";
  font-size: 30rpx;
  display: block; width: 88rpx; text-align: center;
  height: 88rpx; line-height: 88rpx; color: #999;
}
.after-ups::before{content: '\e63d';}

.recommend view{ float: left;
  width: 186rpx; height: 56rpx; border: 2rpx solid #eee; border-radius: 6rpx; font-size: 24rpx;  color: #333; line-height: 56rpx;
  margin: 20rpx 0 0 20rpx; text-align: center;
}
.recommend .active{ color: #586C94; border-color:#586C94;}


.tonn-box{
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 2rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
}
.tonn-box view{
  font-size: 28rpx;
  color: #5C6066;
  line-height: 84rpx;
}
.tonn-box .active{color: #586C94; border-bottom:4rpx solid #586C94;}
.tonn-list-box{background: #fff; margin-top: 20rpx;}
.tonn-list-box .tonn-title,.tonn-list-box .tonn-pic-box{
  display: block;
  border-bottom:2rpx solid #f5f5f5;
  padding: 0 30rpx;
  font-size: 32rpx; color:#333;
  height: 80rpx; line-height: 80rpx;
}
.tonn-list-box .tonn-ems{
  display: flex;
  height: 140rpx;
  padding:20rpx 20rpx 0;
  position: relative;
}
.tonn-list-box .tonn-ems::after{
  content: '';
  display: block;
  height: 4rpx;
  width: 710rpx;
  border-bottom: 2rpx solid #eee;
  position: absolute;
  left: 20rpx;
  bottom: 0;
}
.tonn-list-box .tonn-ems .image{
  display: block;
  width:180rpx;
  height: 120rpx;
}
.tonn-list-box .tonn-ems image{
  width:180rpx; 
  height: 120rpx;
  overflow: hidden;
}
.tonn-list-box .tonn-ems .fol-ebs{
  flex: 1;
  padding-left: 20rpx;
}

.tonn-list-box .text{
  height: 80rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx; color: #333;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.fol-ebs .btn-box{
  height: 40rpx;
  display: flex;
}
.fol-ebs .btn-box .pays{
  flex: 1;
  font-size: 28rpx;
  color: #F60;
}
.fol-ebs .btn-box .btn{
  width: 120rpx;
  height: 40rpx;
  font-size: 28rpx; color: #F60;
}
.tonn-list-box .btn::after{
  content: '\e620';
  font-family: "wxfont";
  display: inline-block;
}
.fol-btslst{
  height: 82rpx;
  padding: 16rpx 20rpx 0;
  background: #fff;
  border-top: 2rpx solid #e5e5e5;
  display: flex;
  justify-content: space-between;
  margin-top: -2rpx;
}
.fol-btslst view{
  width: 214rpx;
  height: 62rpx;
  line-height: 66rpx;
  color: #586c94;
  border: 2rpx solid #586c94;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 62rpx;
}

