/* pages/tops/tops.wxss */
page{
  height:100%;
}
.top-box{
  height:100%;
  background-color: #f5f5f5; 
  overflow: hidden;
}
.options{
  width: 100%;
  padding: 10rpx;
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.option{
  width: 33.3%;
  display: block;
}
.option > text{
  display: block;
  margin: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.option > .option-visible{
  color:#586c94;
  border-color:#586c94;
}
.item-box{
  background-color: #fff;
  display: block;
  height: 220rpx;
  padding:30rpx 30rpx 0;
  border-bottom: 2rpx solid #e5e5e5;
}
.item-box-head{
  height: 120rpx;
  width: 100%;
  display: block;
  padding-bottom: 20rpx;
}
.img{
  width: 180rpx;
  height: 120rpx;
  float: left;
  position: relative;
}
.img:after{
  position: absolute;
  top: 0;
  left: 0;
  width:180rpx;
  height:120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: 1;
  font-family: "detail";
  content: "\5361";
  text-align: center;
}
.img > image{
  width: 180rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.inx{font-size: 24rpx; color: #fff;
  position: absolute;
  top: 0; left: 0;
  width: 60rpx; height: 60rpx;
  z-index: 4;
  line-height: 45rpx;
  text-indent: 7rpx;
}
.inx:before{content:''; height:0; width:0; display:block; border:60rpx transparent solid; border-bottom-width:0; border-left-width:0; border-top-color:#f33; position:absolute; top:0px; left:0px;z-index: -1;}
.gre:before{border-top-color: #00c708;}
.tag:before{border-top-color: #999;}
.msg{
  float: right;
  width: 484rpx;
}
.msg > text{
  display: block;
}
.txt{height: 86rpx; font-size: 30rpx;}
.pay{height: 34rpx; font-size: 25rpx; color: #f60;}
.item-box-fot{
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2rpx solid #eee;
}
.fot-msg{
  font-size: 30rpx;
  color: #999;
  float: left;
}

.btn{
  float: right;
  margin-top: 14rpx;
  font-size: 30rpx;
  color: #f60;
  text-align: center;
  line-height: 48rpx;
  width: 122rpx;
  height: 48rpx;
  border-radius: 4rpx;
  border:2rpx solid #f60;
}
.num{
  padding: 0 10rpx;
  color: #333;
}
