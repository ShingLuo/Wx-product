/* pages/searchCar/searchCar.wxss */
@import "../../components/searchResult/searchResult.wxss";
.title{
  padding:10rpx 30rpx;
  color:#586C94;
  font-size:28rpx;
  background-color:#f5f5f5;
}
.options{
  background: #fff;
  padding: 10rpx;
  overflow: hidden;
}
.options .list-info{
  float: left;
  width: 25%;
  height: 64rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  margin: 10rpx 0;
  padding: 0 10rpx;
}
.options .list-info text{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 6rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.more{
  position:relative;
}
.more:after{
  position: absolute;
  right: 5rpx;
  bottom:5rpx;
  height:40rpx;
  color:#B8C0D0;
  content:"\9009";
  font-family:'detail';
}