/* pages/config/config.wxss */
@import "../../components/config/addSeries/addSeries.wxss";
page{
  height:100%;
  padding-bottom:100rpx;
  background-color: #f5f5f5; 
  box-sizing: border-box;
}
.config{
  height:100%;
  background: #f5f5f5;
  display: block;
  padding-top: 378rpx;
  box-sizing: border-box;
}
.isNones{padding-top: 280rpx;}
.product-name{
  width:100%;
  height:280rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}
.product-name > .caption{
    background-color:#fff;
}
.title{
    color:#666;
    font-size:24rpx;
}
.number{
    margin-top: 6rpx;
    height:40rpx;
    flex-direction:row;
    justify-content: center;
    align-items: center;
}
.existing{
    font-size: 36rpx;
    color: #333;
}
.total{
    font-size: 24rpx;
    color: #666;
}
.name-info{
  width:285rpx;
  border-left: 2rpx solid #eee;
  border-bottom:1px solid #eee; 
}
.name{
    position:relative;
    text-align: center;
    padding: 40rpx 20rpx;
    line-height:36rpx;
}
.name-wrapper{
    height:140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.clear{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 30px;
  width: 30px;
  height: 30px;
  line-height:30px;
  overflow: hidden;
  color: #ccc;
  font-family: "detail";
}
.name-text{
  display: flex;
  /* line-height: 30rpx; */
  font-size: 28rpx;
  color: #333;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  overflow: hidden;
  lines: 4;
}
.foot-price{
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  text-align: center;
  border: 2rpx solid #f60;
  border-radius: 4rpx;
  color: #f60;
  font-size: 28rpx;
}
.add-product{
  position: relative;
  padding: 40rpx 20rpx;
  text-align: center;
}
.add-text{
  font-size: 28rpx;
  color: #ccc;
}
.add-text:before{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  font-family: "detail";
  content: "\e604";
  font-size: 80rpx;
}

.model{
  background: #fff;
}
.model:last-child{
  margin-bottom:20rpx;
}
.title-text{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  color: #333;
  border-bottom: 2rpx solid #eee;
  border-top:20rpx solid #f5f5f5;
}
.options{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  word-wrap: break-word;
  word-break: break-all;
}
.caption{
  flex:1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  background: #f9f9f9;
  border-bottom: 2rpx solid #eee;
}
.caption-name{
  padding:80rpx 0;
}
.content{
  width: 285rpx;
   min-height: 30rpx;
  line-height: 30rpx;
  padding: 20rpx 0 ;
  text-align: center;
  font-size: 28rpx; 
  color: #333;
  border-bottom: 2rpx solid #eee;
  border-left: 2rpx solid #eee;
}
.foot-price{
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  text-align: center;
  border: 2rpx solid #f60;
  border-radius: 4rpx;
  color: #f60;
  font-size: 28rpx;
}
.classify{
  position: fixed;
  right: 0;
  bottom: 270rpx;
  width: 140rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 36rpx 0 0 36rpx;
  text-align: center;
  background: rgba(0,0,0,0.8);
}
.classify text{
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
}
.classify text:before{
  display: inline-block;
  font-family: "detail";
  content: "\7c7b";
  margin-right: 6rpx;
  transform: scale(.6);
  -webkit-transform: scale(.6);
}
.classify-content{
  position: fixed;
  right: 170rpx;
  bottom: 270rpx;
  width: 420rpx;
  flex-wrap: wrap;
  display: flex;
  flex-direction: row;
  background-color: rgba(0,0,0,.8);
  border-radius: 5rpx;
}
.classify-content:after{
  position: absolute;
  bottom: 20rpx;
  right: -14rpx;
  -webkit-transform: rotate(-42.5deg);
  transform: rotate(-42.5deg);
  color: rgba(0,0,0,.8);
  font-family: "detail";
  content: "\9009";
}
.classify-info{
  width: 210rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.classify-info text{
  font-size: 28rpx;
  color: #fff;
}
.footer-price{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 72rpx;
  background: #f60;
  text-align: center;
  padding: 16rpx 0 13rpx 0;
  z-index: 10;
}
.footer-price .foot-price-text{
  display: block;
  font-size: 32rpx;
  color: #fff;
  line-height:28rpx;
}
.footer-price .number{
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
}
.home-bt{
  width: 94rpx;
  height: 94rpx;
  position: absolute;
  bottom: 140rpx;
  right: 18rpx;
  z-index: 66;
}
.car-xboxs{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: auto;
}
.type-module{
  background: #fff;
  padding: 10rpx;
  max-height: 500rpx;
  overflow: hidden;
  transition: all .3s;
}
.type-nones{
  display: none;
}
.type-module .list-info{
  float: left;
  width: 33.3%;
  height: 64rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  margin: 10rpx 0;
  padding: 0 10rpx;
}
.type-module .list-info text{
  position:relative;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 6rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.type-module .list-info text:after{
  position: absolute;
  right: 5rpx;
  bottom:5rpx;
  height:40rpx;
  color:#B8C0D0;
  content:"\9009";
  font-family:'detail';
}
.type-module .selected text{
  color:#1571e5;
  border-color:#1571e5;
}
.type-module .selected text:after{
  color:#1571e5;
}
.fold{
  height: 78rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: #FAFAFA;
  box-shadow: inset 0 -1px 0 0 #D8D8D8;
  color: #333;
  /*border-top: 1rpx solid #e5e5e5;*/
  margin-bottom: 20rpx;
}
.fold:after{
  display: inline-block;
  font-family: "detail";
  content: "\56de";
  margin-left: 5px;
  transform: rotate(-90deg);
  transition: all .5s;
}
.unfold:after{
    transform: rotate(90deg);
}
.mask{
  z-index: 888;
}
/* 侧边栏内容 */
.sidebar{z-index: 999;}
/* 侧边栏内容 */
.sbox-item{
  padding-left: 30rpx;
  background-color:#fff;
}
.model-list{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#333;
  border-bottom:1px solid #eee;
  background-color:#fff;
}
.sbox-item .model-list:last-child{
  border-bottom:none;
}
.selected{
  color:#1571e5;
}
.disabled{
  color: #bbb;
}
