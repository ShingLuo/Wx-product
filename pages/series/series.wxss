/* pages/seriesColligate/seriesColligate.wxss */
@import "../../components/series/truckImage/truckImage.wxss";
@import "../../components/series/modelTypeList/modelTypeList.wxss";
@import "../../components/series/otherConcerns/otherConcerns.wxss";
@import "../../components/dealer/dealer.wxss";
@import "../../components/selectLocation/selectLocation.wxss";
page{
  height:100%;
  padding-bottom:100rpx; 
  box-sizing: border-box;
  background-color:#f5f5f5;
}
.container{
  height:100%;
  background-color: #f5f5f5; 
  overflow: hidden;
}
.series-wrapper{
  height:100%;
}
.series-nav{
  display: block;
  height: 92rpx;
  padding-top: 16rpx;
  background: #fff;
  width: 100%;
}
.series-nav .nav-text{
  float: left;
  text-align: center;
  width: 250rpx;
  font-size: 26rpx;
}
.nav-ico-pei:before{
  font-family: 'wxfont';
  display: block;
  content: '\e6fc';
  font-size: 38rpx;
  color: #999;
  padding-bottom: 10rpx;
}
.nav-ico-img:before{
  font-family: 'wxfont';
  display: block;
  content: '\e6fa';
  font-size: 38rpx;
  color: #999;
  padding-bottom: 10rpx;
}
.nav-ico-sell:before{
  font-family: 'wxfont';
  display: block;
  content: '\e6fd';
  font-size: 38rpx;
  color: #999;
  padding-bottom: 10rpx;
}
.summarize{
  width: 33.3%;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #586c94;
  color: #586c94;
}
.nav-selected{
  color: #586c94;
  border-bottom: 4rpx solid #586c94;
}
.footer-info{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  z-index: 10;
  overflow: hidden;
}
.footer-nav{
  flex: 1;
  width:50%;
  border-top:1px solid #eee;
  background-color:#fff;
}
.footer-nav > text{
  display: inline-block;
  width: 50%;
  color: #586c94;
  font-size: 32rpx;
  text-align: center;
  line-height:100rpx;
}
.footer-price{
  flex:1;
  padding: 16rpx 0 13rpx 0;
  border-top:1px solid #f60;
  background-color: #f60;
}
.footer-price .foot-price-text{
  display: block;
  font-size: 32rpx;
  line-height:28rpx;
  color: #fff;
}
.footer-price .number{
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
}
.switch-location-buttons{
  display: flex;
  height:80rpx;
  flex-direction: row;
}
.switch-location-buttons > view{
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  color:#333;
  font-size:32rpx;
}
.switch-location-buttons .ok{
    color:#448dea;
    font-weight: bold;
    border-left:1px solid #eee;
}
.compare-number{
    position: fixed;
    right:-140rpx;
    bottom: 270rpx;
    width: 140rpx;
    height: 70rpx;
    line-height: 70rpx;    
    text-align: center; 
    color:#fff;
    font-size:24rpx;
    transition: right .3s;
    border-radius: 35rpx 0 0 35rpx;
    background-color: rgba(21,113,229,.8);
}
.compare-visible{
  right:0;
}
.mask-wrapper{
  height:100%;
  width:100%;
}
.mask-content{
  height:125%;
}
