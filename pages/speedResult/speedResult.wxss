page{
  height:100%;
  background-color: #f5f5f5;
}
.result-wrapper{
  padding: 24rpx;
  box-sizing: border-box;
}
.spd-ret-box{
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}
.spd-ret-box text{
  height: 80rpx;
  text-align: center;
  border-bottom: 2rpx solid #E3E3E3;
  line-height: 80rpx;
  font-weight: bold;
  display: block;
  font-size: 28rpx;
}
.spd-itm-em{
  display: flex;
  height: 88rpx;
  border-bottom: 2rpx solid #EDEDED;
}
.spd-itm-em view{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #5C6066;
  line-height: 88rpx;
}
.spd-itm-em view:last-child{
  border-left: 2rpx solid #EDEDED;
}

/* 弹窗提示 */
.notification{
  position:fixed;
  width:100%;
  min-height:40rpx;
  top:-110rpx;
  left:0;right:0;
  z-index:9999;
  padding:24rpx 30rpx 35rpx;
  box-sizing:border-box;
  background-color:rgba(234,67,53,.9);
  transition:all .4s;opacity:0;
}
.notification-in{top:0;opacity:1}
.notification-content{
  font-size: 32rpx;
  color:#fff;
  line-height: 40rpx;
  text-align:center;
  letter-spacing:2rpx;
}
.notification-handle-bar{
  position:absolute;
  bottom:10rpx;
  left:50%;
  transform:translate3d(-50%,0,0);
  width:50rpx;height:8rpx;border-radius:5rpx;background:#fff;opacity:.5
}