/* pages/searchResult/searchResult.wxss */
/* 分类选项 */
.search-result{
    position:fixed;
    width:100%;
    top:0;
    left:100%;
    bottom:0;
    overflow: hidden;
    background-color:#fff;
    transition: all .3s;
    z-index:10
}
.search-result.visible{
  left:0;
}
.type-module{
  background: #fff;
  padding: 10rpx;
  max-height: 160rpx;
  overflow: hidden;
  transition: all .3s;
}
.type-module.visible{
  max-height: 500rpx;
}
.type-module .list-info{
  float: left;
  width: 33.33%;
  height: 64rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  margin: 10rpx 0;
  padding: 0 10rpx;
}
.type-module .list-info text{
  position:relative;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 6rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.type-module .list-info text:after{
  position: absolute;
  right: 5rpx;
  bottom:5rpx;
  height:40rpx;
  color:#B8C0D0;
  content:"\9009";
  font-family:'detail';
}
.type-module .selected text{
  color:#1571e5;
  border-color:#1571e5;
}
.type-module .selected text:after{
  color:#1571e5;
}
.fold{
  height: 78rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
  color: #999;
  border-top: 1rpx solid #e5e5e5;  
}
.fold:after{
  display: inline-block;
  font-family: "detail";
  content: "\56de";
  margin-left: 5px;
  transform: rotate(-90deg);
  transition: all .5s;
}
.unfold:after{
    transform: rotate(90deg);
}
/* 侧边栏内容 */
.sidebar-model{
  padding-left:30rpx;
  background-color:#fff;
}
.model-list{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#333;
  border-bottom:1px solid #eee;
  background-color:#fff;
}
.sidebar-model .model-list:last-child{
  border-bottom:none;
}
.selected{
  color:#1571e5;
}
.disabled{
  color: #bbb;
}
/* 品牌列表样式 */
.sidebar-title + .brand-list{
  border-top:20rpx solid #f5f5f5;
}
.brand-list{
  background-color:#fff;
}
.brand-list .title{
  height: 60rpx;
  padding-left: 30rpx;  
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  background-color:#f5f5f5;
}
.brand-list .brand-model{
  position:relative;
  height:88rpx;
  line-height:88rpx;
  margin-left:30rpx;
  padding-left:100rpx;
  border-bottom:1px solid #eee;
}
.brand-list .brand-model:last-child{
  border-bottom:none;
}
.brand-list .brand-model .unlimited{
  position: absolute;
  top: 14rpx;
  left: 0;
  width: 86rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #eee;
  font-size: 32rpx;
  color: #d8d8d8;
  text-align: center;
  background-color:#fff;
  z-index:2;
}
.brand-list .brand-model .img{ 
  position: absolute;
  top: 0;
  left: 0;
  width:90rpx;
  height:60rpx;  
  z-index: 1;
}
.brand-list .brand-model image{
  position: absolute;
  top: 14rpx;
  left: 0;
  width:90rpx;
  height:60rpx;  
  z-index: 2;
  background-color:#fff;
}
.brand-list .brand-model .img:after{
  position: absolute;
  top: 14rpx;
  left: 0;
  width:90rpx;
  height:60rpx;  
  line-height: 60rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  font-family: "detail";
  content: "\5361";
  text-align: center;
}
.brand-list .brand-model text{
  margin-left:20rpx;
  font-size:32rpx;
}
.brand-list .selected{
  color:#1571e5;
}
/* 筛选结果 */
.result{
  border-top:20rpx solid #f5f5f5;
}
.result .header{
  position: relative;
  height: 80rpx;
  padding: 0 46rpx 0 30rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #999;
  background: #fff;
  overflow: hidden;
  border-bottom:1px solid #eee;
}
.result .header .total{
  color:#f60;
}
.result .header .price{
  position: relative;
  float: right;
  font-size: 28rpx;
  color: #666;
}
.result .header .price:before{
  position: absolute;
  right: -20rpx;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  content: '\9ad8';
  font-family: 'detail';
  font-size: 24rpx;
  color: #999;
  transform: scale(.5);
  -webkit-transform: scale(.4);
}
.result .header .price:after{
  position: absolute;
  right: -20rpx;
  bottom: 36rpx;
  width: 20rpx;
  height: 20rpx;
  content: '\4f4e';
  font-family: 'detail';
  font-size: 24rpx;
  color: #999;
  transform: scale(.5);
  -webkit-transform: scale(.4);
}
.result .header .hot{
  float: right;
  color: #666;
  font-size: 28rpx;
  margin-right: 15px;
}
.result .header .hot:after{
  content: '\e606';
  font-family: 'detail';
  font-size: 10px;
  margin-left: 5px; 
}
.result .header .newest{
  float:right;    
  font-size: 28rpx;
  color: #666;
}
.result .header .visible{
  color: #1571e5;
}
.result .header .top.visible:before{
  color: #1571e5;
}
.result .header .bottom.visible:after{
  color: #1571e5;
}
/* 筛选结果列表 */
.result-model{
  padding: 0 30rpx;
  overflow: hidden;
}
.result-list{
  position: relative;
  padding: 30rpx 0 32rpx 200rpx;
  border-bottom:1px solid #eee;
}
.result-list:after{
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -10px;
  font-family: "detail";
  content: "\53bb";
  font-size: 14px;
  color: #ddd;
  font-weight: bold;
}
.result-list .img{ 
  position: absolute;
  top: 15px;
  left: 0;
  width: 180rpx;
  height: 120rpx;
  z-index: 1;
}
.result-list image{
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 120rpx;
  z-index: 2;
}
.result-list .img:after{
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  font-family: "detail";
  content: "\5361";
  text-align: center;
}
.result-list .product-info .name{
  display: block;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #333;
  margin-right:40rpx; 
  text-overflow: ellipsis;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.result-list .product-info .price{
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #f60;
  margin-bottom: 8rpx;
}
.result-list .product-info .not-price{
  line-height: 24rpx;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  margin-bottom: 0;
}
.result-list .product-info .total{
  display: block;
  min-height: 12px;
  line-height: 12px;
  font-size: 12px;
  color: #999;  
}
.result-list .product-info .total text{
  color:#f60;
}

/* 车系弹层样式 */
  /* 车系信息 */
.series-info{
  color: #333;
  padding: 20rpx 30rpx 30rpx;
  display: block;
  background-color: #fff;
}
.series-info .name{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: bold; 
}
.series-info .model{
  position: relative;
  margin-top:20rpx;
  padding-left:200rpx;
}
.series-info .img{
  position: absolute;
  left: 0;
  top: 0;
  width: 180rpx;
  height: 120rpx;
  z-index: 1;  
}
.series-info .img:after{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  font-family: "detail";
  content: "\5361";
  text-align: center;  
}
.series-info .img image{
  width: 180rpx;
  height: 120rpx;
  font-size: 0;
}
.series-info .price{
  color: #f60;
  font-size: 24rpx;
}
.series-info .price text{
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 10rpx;
}
.series-info .goSeries{
  margin-top: 16rpx;
  display: block;
  width: 150rpx;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #1571e5;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 6rpx; 
}
  /* 车系列表 */
.series-list .header{
  padding-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 24rpx;
  background-color: #f5f5f5;
}
.series-list .header + .product-list{
  border-top:none;
}
.series-list .product-list{
  padding: 10rpx 30rpx 20rpx;
  border-top:1px solid #eee;
  background-color:#fff;
}
.series-list .product-list .name{
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
  font-size: 14px;
}
.series-list .product-list .tags text{
  padding: 0 10rpx;
  color: #80bdff;
  margin-right: 10rpx;
  border: 1rpx solid #80bdff;
  border-radius: 6rpx;
  text-align: center;
  font-size: 20rpx;
}
.series-list .product-list .price{
  color: #f60;
  font-size:24rpx;
  line-height: 56rpx;
  margin-top: 10rpx;
}
.series-list .product-list .price text{
  font-size:32rpx;
  margin-right: 10rpx;
}
.series-list .product-list .not-price{
  color: #999;
  font-size:24rpx;
}
.series-list .product-list .footer-price{
  float: right;
  font-size: 24rpx;
  color: #f60;
  width: 120rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
}
.series-list .product-list .footer-price:after{
  content: '\53bb';
  font-family: 'detail';
  margin-left: 5px;
  font-size: 10px;
}
.load-more{
  padding: 0 15px 10px;
  text-align: center;
  background: #fff;
}
.load-more text{
  display: block;
  height: 38px;
  line-height: 38px;
  font-size: 14px;
  color: #999;
  border: 1px solid #e9e9e9;
  border-radius: 4px;
}
/* 品牌弹层索引 */
.nav{
  position: fixed;
  right: 0;
  top: 160rpx;
  z-index:15
}
.nav text{
  display: block;
  height:44rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 0 10rpx;
}
.nav text.selected{
  color: #1571e5;
}
.scale{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 160rpx;
  height: 160rpx;
  line-height: 160rpx;
  margin: -80rpx 0 0 -80rpx;
  text-align: center;
  font-size: 100rpx;
  color: #fff;
  background: rgba(0,0,0,0.6);
  z-index: 12;
  -webkit-transition: opacity .2s ease-out;
  transition: opacity .2s ease-out;
  border-radius: 16rpx;
}