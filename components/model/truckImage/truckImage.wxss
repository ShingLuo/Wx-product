.picture{
  position: relative;
  height:480rpx;
}
.picture-list image{
  width: 100%;
  height:480rpx;
  vertical-align: middle;
}
.not-img{
  height:500rpx;
  text-align: center;
  line-height: 700rpx;
  font-size:28rpx;
  color:#999;
  background-color:#fff;
}
.ranking{
  position: absolute;
  right: 0;
  top: 0;
  width: 212rpx;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.ranking:before{
  float: left;
  width: 60rpx;
  font-size: 42rpx;
  color: #ff8533;
  content: '\6392';
  font-family: 'detail';
}
.ranking .ranking-icon:before{
  position: absolute;
  top: -2rpx;
  left: 30rpx;
  width: 24rpx;
  height: 40rpx;
  content: '\e609';
  font-family: 'wxfont';
  color: #fff;
  font-size: 22rpx;
  z-index: 10;
}
.ranking .ranking-text{
  float: right;
  background: #ff8533;
  width: 152rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.price{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  color: #fff;
  font-size: 24rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-image: linear-gradient(to bottom,rgba(255, 255, 255, 0) 0,rgba(0, 0, 0, .9));
  background-image: -webkit-linear-gradient(to bottom,rgba(255, 255, 255, 0) 0,rgba(0, 0, 0, .9));
}
.price .price-text{
  font-size: 32rpx;
}

.price .not-price{
  font-size:24rpx;
}
.price .picture-text{
  float: right;
  line-height: 96rpx;
}
.price .picture-text:before{
  font-family: 'wxfont';
  display: inline-block;
  content: '\e613';
  font-size: 30rpx;
  color: #fff;
  position: relative;
  top: 5rpx;
  right: 6rpx;
}
.share-box{
  position: fixed;
  left: 280rpx;
  bottom: -10rpx;
  width: 180rpx;
  height: 64rpx;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  z-index: 4;
  background-color: rgba(0,0,0,.76);
  transition: all .3s ease-out;
  border-radius: 40rpx;
}
.share-text{font-size: 24rpx;
 display: inline;
}
.share-box button[plain]{
  border:0;color: #fff; padding:0; margin: 0;
}
.share-icon:before{
  font-family: 'wxfont';
  display: inline-block;
  content: '\e6fb';
  font-size: 26rpx;
  margin-right: 8rpx;
  color: #fff;
}
